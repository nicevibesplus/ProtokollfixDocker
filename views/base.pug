include ./mixins

doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='https://github.com/noerw')
    link(rel='icon', href=baseURL + '/img/favicon.ico')
    block head
      link(href=baseURL + '/bower/bootstrap/dist/css/bootstrap.min.css', rel='stylesheet')
      link(href=baseURL + '/css/fontawesome.min.css', rel='stylesheet')
      link(href=baseURL + '/css/solid.min.css', rel='stylesheet')
      script(src=baseURL + '/bower/jquery/dist/jquery.min.js')
      script(src=baseURL + '/bower/bootstrap/dist/js/bootstrap.min.js')
  body
    #baseurl(style="display:none;")=baseURL
    //- fixed navbar
    .navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href=baseURL)
            img#logo(src=baseURL + '/img/logo.png', style={height: '22px'})
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-left
            block navleft
          ul.nav.navbar-nav.navbar-right
            block navright
    //- content
    .container.fullheight
       block pagecontent
